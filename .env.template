# =============================================================================
# LangGraph OWL Multi-Agent System Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Key (Required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL API KEYS FOR ENHANCED FUNCTIONALITY
# =============================================================================

# Google Search API (Optional - for enhanced search capabilities)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here

# Google Search Engine ID (Optional - for enhanced search)
# Get your search engine ID from: https://cse.google.com/cse/
SEARCH_ENGINE_ID=your_search_engine_id_here

# Tavily Search API (Optional - for enhanced search)
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Default Model Configuration
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.0
DEFAULT_MAX_ROUNDS=10

# Logging Configuration
LOG_LEVEL=INFO
VERBOSE_LOGGING=true

# Tool Configuration
DEFAULT_TOOL_SELECTION=comprehensive
ENABLE_CODE_EXECUTION=true
ENABLE_WEB_SCRAPING=true
ENABLE_FILE_OPERATIONS=true

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# Gradio Web Interface
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# =============================================================================
# SAFETY & SECURITY SETTINGS
# =============================================================================

# Code execution safety
CODE_EXECUTION_TIMEOUT=30
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.py,.txt,.csv,.json,.md

# Web scraping limits
MAX_SCRAPING_TIMEOUT=10
MAX_RESPONSE_SIZE_KB=5000

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development mode
DEV_MODE=false
DEBUG_MODE=false

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_TOKEN_COUNTING=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Only OPENAI_API_KEY is required for basic functionality
# 2. Additional API keys enable enhanced search and tool capabilities
# 3. Safety settings help prevent abuse and resource exhaustion
# 4. All settings have sensible defaults if not specified
# 5. Boolean values: true/false (case-insensitive)
# 6. Never commit this file with real API keys to version control